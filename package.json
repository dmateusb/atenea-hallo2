{
  "name": "atenea-hallo2",
  "version": "1.0.0",
  "description": "AI Avatar Video Generator using Hallo2",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx src/cli.ts",
    "generate": "tsx src/cli.ts generate",
    "build": "tsc",
    "start": "node dist/cli.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vitest",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "setup": "./scripts/setup.sh"
  },
  "keywords": [
    "ai",
    "video",
    "hallo2",
    "talking-head",
    "avatar"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "commander": "^12.1.0",
    "chalk": "^5.3.0",
    "ora": "^8.1.1",
    "openai": "^4.77.3",
    "dotenv": "^16.4.7"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.18.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0",
    "python": ">=3.10"
  }
